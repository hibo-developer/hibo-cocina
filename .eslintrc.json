{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "no-process-exit": "warn",
    "no-process-env": "off"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
