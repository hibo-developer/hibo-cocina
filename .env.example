# Configuración del Servidor
PORT=3000
NODE_ENV=development

# Base de Datos
DATABASE_PATH=./data/hibo-cocina.db

# CORS
CORS_ORIGIN=*

# JWT (para Autenticación)
JWT_SECRET=tu_secreto_jwt_muy_seguro_cambiar_en_produccion_2026
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug
# ============================================================================
# Redis Configuration (Sprint 2.6)
# ============================================================================

# Habilitar/deshabilitar Redis caching
REDIS_ENABLED=true

# Servidor Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
